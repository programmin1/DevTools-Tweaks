<?xml version="1.0" encoding="UTF-8"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#" 
 xmlns:em="http://www.mozilla.org/2004/em-rdf#">
  <Description about="urn:mozilla:install-manifest">
    <em:id>devtooltweaks@Luke.Bryan</em:id>
    <em:name>DevTools Tweaks</em:name>
    <em:version>0.4</em:version>
    <em:creator>Luke Bryan</em:creator>
    <em:description>Modifications for Firefox Devtools. Adds Edit Html, New Rule and Open URL to the inspector.
    Adds JSON parser and POST listing functionality to network view in Web Console (Firefox 21-24), and makes the top tabs smaller.
    Adds double-click color picker in CSS inspector (using David Durman's FlexiColorPicker).</em:description>
    <em:type>2</em:type>
    <em:unpack>true</em:unpack>

    <em:targetApplication> <!-- Works with Firefox -->
      <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id> 
        <em:minVersion>20.0</em:minVersion>
        <em:maxVersion>25.*</em:maxVersion>
      </Description>
    </em:targetApplication>
  </Description>
</RDF>
